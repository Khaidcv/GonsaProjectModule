@using System.Collections.Generic
@using System.Linq
@using Microsoft.AspNetCore.Http
@using Microsoft.AspNetCore.Http.Authentication
@using Microsoft.AspNetCore.Identity;
@using Gonsa.Application.Models.Account
@using Gonsa.Application.Models.Account.ViewModel;
@using Gonsa.Application.Providers.ggcapcha;
@using Microsoft.Extensions.Configuration
@inject IConfiguration Configuration
@inject SignInManager<ApplicationUser> SignInManager
@model RegisterViewModel
@{
    Layout = null;
}
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <title>Gonsa | Đăng ký tài khoản</title>
    <!-- Tell the browser to be responsive to screen width -->
    <meta content="width=device-width, initial-scale=1, maximum-scale=1, user-scalable=no" name="viewport">
    <!-- Bootstrap 3.3.7 -->
    <link rel="stylesheet" href="~/assets/bootstrap/dist/css/bootstrap.min.css">
    <!-- Font Awesome -->
    <link rel="stylesheet" href="~/assets/font-awesome/css/font-awesome.min.css">
    <!-- Ionicons -->
    <link rel="stylesheet" href="~/assets/Ionicons/css/ionicons.min.css">
    <!-- Theme style -->
    <link rel="stylesheet" href="~/dist/css/AdminLTE.css">
    <!-- iCheck -->
    <link rel="stylesheet" href="~/plugins/iCheck/square/blue.css">

    <!-- HTML5 Shim and Respond.js IE8 support of HTML5 elements and media queries -->
    <!-- WARNING: Respond.js doesn't work if you view the page via file:// -->
    <!--[if lt IE 9]>
    <script src="https://oss.maxcdn.com/html5shiv/3.7.3/html5shiv.min.js"></script>
    <script src="https://oss.maxcdn.com/respond/1.4.2/respond.min.js"></script>
    <![endif]-->
    <!-- Google Font -->
    <script src="https://ajax.aspnetcdn.com/ajax/jQuery/jquery-2.2.0.min.js"></script>
    <script src="https://ajax.aspnetcdn.com/ajax/jquery.validate/1.16.0/jquery.validate.min.js"></script>
    <script src="https://ajax.aspnetcdn.com/ajax/jquery.validation.unobtrusive/3.2.6/jquery.validate.unobtrusive.min.js"></script>
    <script src='https://www.google.com/recaptcha/api.js'></script>
    <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Source+Sans+Pro:300,400,600,700,300italic,400italic,600italic">
    <style>
        body,
        html {
            height: 100%;
        }

        /*.register-page {
            width:500px;
            border: 1px solid #000;
            background-image: url(/dist/img/main_bg.png);
            background-repeat: no-repeat;
            background-size: cover;
        }*/

        .register-box {
            width: 700px;
        }

        .register-fullname {
            max-width: 200px;
        }

        @@media (max-width: 768px) {
            .register-box {
                width: 90%;
                margin-top: 20px;
            }
        }
    </style>
</head>
<body class="hold-transition register-page">
    <div class="register-box">
        <div class="register-logo">
            <a href="~/dashboard"><b>Gonsa</b> System</a>
        </div>

        <div class="register-box-body">
            <h4 class="login-box-msg">Đăng ký tài khoản</h4>

            <form method="post" asp-route-returnurl="@ViewData["ReturnUrl"]">

                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group has-feedback">
                    <label asp-for="FullName"></label>
                    <div class="row">
                        <div class="form-group has-feedback col-xs-4 nopadding">

                            <input type="text" id="fName" class="form-control input-group-lg register-fullname" onkeyup="generateFullName()" placeholder="Họ" /><br />
                        </div>
                        <div class="form-group has-feedback col-xs-4 nopadding">
                            <input type="text" id="lName" class="form-control input-group-lg register-fullname" onkeyup="generateFullName()" placeholder="Tên đệm" /><br />
                        </div>
                        <div class="form-group has-feedback col-xs-4 nopadding">
                            <input asp-for="FullName" id="FullName" class="form-control input-group-lg register-fullname" placeholder="Tên" />
                            @* <span class="glyphicon glyphicon-user form-control-feedback"></span>*@
                        </div>
                    </div>
                    <span asp-validation-for="FullName" class="text-danger"></span>
                </div>

                <div class="form-group has-feedback">
                    <label>Tên đăng nhập</label>
                    <input asp-for="UserName" class="form-control" />
                    <span class="glyphicon glyphicon-user form-control-feedback"></span>
                    <span asp-validation-for="UserName" class="text-danger"></span>
                </div>
                <div class="form-group has-feedback">
                    <label asp-for="Email"></label>
                    <input asp-for="Email" class="form-control" />
                    <span class="glyphicon glyphicon-envelope form-control-feedback"></span>
                    <span asp-validation-for="UserName" class="text-danger"></span>
                </div>
                <div class="form-group has-feedback">
                    <label>Mật khẩu</label>
                    <input asp-for="Password" class="form-control" />
                    <span class="glyphicon glyphicon-lock form-control-feedback"></span>
                    <span asp-validation-for="Password" class="text-danger"></span>
                </div>
                <div class="form-group has-feedback">
                    <label>Xác nhận mật khẩu</label>
                    <input asp-for="ConfirmPassword" class="form-control" />
                    <span class="glyphicon glyphicon-lock form-control-feedback"></span>
                </div>
                <div class="form-group">
                    <label>Chức danh</label>
                    <select asp-for="position" class="form-control">
                        <option value="SALE">Trình dược viên</option>
                        <option value="USER">Nhân viên nghiệp vụ</option>
                    </select>
                    @*SALE-User*@
                    <span asp-validation-for="position" class="text-danger"></span>
                </div>
                <div class="form-group has-feedback">
                    <label>Mô tả vị trí/Nhiệm vụ</label>
                    <textarea asp-for="TaskInfo" class="form-control"></textarea>
                    <span class="glyphicon glyphicon-log-in form-control-feedback"></span>
                    <span asp-validation-for="TaskInfo" class="text-danger"></span>
                </div>
                <div class="form-group">

                </div>
                <div class="row">

                    <div class="col-xs-12 text-right text-center">
                        <div>
                            @Html.GoogleReCaptcha(Configuration.GetValue<String>("GoogleReCaptcha:ClientKey"), "enabledbutton")
                        </div>
                        <hr />
                        <button type="submit" onclick="window.location='~/login'" class="btn btn-default btn-flat margin">Hủy</button>
                        <button type="submit" id="btn_register" disabled="disabled" class="btn btn-primary btn-flat">Đăng ký <i class="fa fa-sign-in" aria-hidden="true"></i></button>
                    </div>
                    <!-- /.col asp-controller="Account" asp-action="Register" -->
                </div>
            </form>
            <div class="text-right">
                <br />
                <a href="~/login" class="text-center">Đã có tài khoản, Đăng nhập</a>
            </div>
        </div>
        <!-- /.form-box -->
    </div>
    <!-- /.register-box -->
    <!-- jQuery 3 -->
    <script src="~/assets/jquery/dist/jquery.min.js"></script>
    <!-- Bootstrap 3.3.7 -->
    <script src="~/assets/bootstrap/dist/js/bootstrap.min.js"></script>
    <!-- iCheck -->
    <script src="~/plugins/iCheck/icheck.min.js"></script>
    <script>
        function enabledbutton() {
            //alert("ok");
            $("#btn_register").prop("disabled", false);
        }
        $(function () {
            $('input').iCheck({
                checkboxClass: 'icheckbox_square-blue',
                radioClass: 'iradio_square-blue',
                increaseArea: '20%' /* optional */
            });
        });

        function generateFullName() {
            $("#FullName").val(
                $("#fName").val() + ' ' +
                $("#lName").val());
        }
    </script>
</body>
</html>
